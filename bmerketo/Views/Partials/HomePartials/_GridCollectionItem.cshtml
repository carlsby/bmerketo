@model GridCollectionItemViewModel

<a asp-controller="products" asp-action="details" asp-route-id="@Model.Id">
    <div class="grid-item">
        <img src="@Model.ImageUrl" alt="@Model.ProductTitle">
        <div class="product-name">@Model.ProductTitle</div>
        <span class="product-price">$@Model.Price</span>
    </div>
</a>
