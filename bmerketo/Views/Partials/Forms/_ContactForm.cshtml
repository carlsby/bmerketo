<section class="form-section">
    <div class="form-con">
        <div class="form-title">
            Write something
        </div>
        <form action="?">
            <div class="grid-item">
                <label class="input-title" for="name">Your Name*</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div class="grid-item">
                <label class="input-title" for="email">Your Email*</label>
                <input type="text" id="email" name="email" required><br>
            </div>
            <div class="grid-item">
                <label class="input-title" for="phonenumber">Phone Number (optional)</label>
                <input type="text" id="lname" name="lname"><br>
            </div>
            <div class="grid-item">
                <label class="input-title" for="company">Company (optional)</label>
                <input type="text" id="company" name="company"><br>
            </div>
            <div class="message-item">
                <label class="input-title" for="company">Message*</label><br/>
                <textarea></textarea>
            </div>
            <div class="checkbox-item">
                <input class="checkbox" type="checkbox" id="save-info" name="save-info">
                <label for="save-info">Save my name, email in this browser for the next time I comment.</label>
            </div>
            <button class="submit-btn" type="submit" value="Submit">Submit</button><br />
        </form>
    </div>
</section>