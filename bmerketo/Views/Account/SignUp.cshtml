@model UserSignUpViewModel
@{ ViewData["Title"] = "Sign up for new account"; }

<div class="d-flex justify-content-center mb-5">

    <form method="post" class="col-10 col-xl-3" novalidate>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="FirstName" class="form-label">First Name</label>
            <input asp-for="FirstName" class="form-control" autocomplete="off" id="firstname" />
            <small class="text-danger"><span asp-validation-for="FirstName"></span></small>
        </div>
        <div id="message">
            <span id="fnameCheck" class="invalid" style="display:none;">First name must only contain <b>letters</b></span>
        </div>

        <div class="mb-3">
            <label asp-for="LastName" class="form-label">Last Name</label>
            <input asp-for="LastName" class="form-control" autocomplete="off" id="lastname" />
            <small class="text-danger"><span asp-validation-for="LastName"></span></small>
        </div>
        <div id="message">
            <span id="lnameCheck" class="invalid" style="display:none;">Last name must only contain <b>letters</b></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" autocomplete="off" id="email"/>
            <small class="text-danger"><span asp-validation-for="Email"></span></small>
        </div>
        <div id="message">
            <span id="emailCheck" class="invalid" style="display:none;">Must be a <b>valid</b> email address</span>
        </div>

        <div class="mb-3">
            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" autocomplete="off" id="phonenumber"/>
            <small class="text-danger"><span asp-validation-for="PhoneNumber"></span></small>
        </div>
        <div id="message">
            <span id="phoneCheck" class="invalid" style="display:none;">Phonenumber must contain exactly 10 <b>digits</b> & start with <b>07</b></span>
        </div>

        <div>
            <label asp-for="Password" class="form-label"> Password </label>
            <input asp-for="Password" class="form-control" autocomplete="off" id="psw" />
            <small class="text-danger"><span asp-validation-for="Password"></span></small>
            <span id="letter" class="invalid">A <b>lowercase</b> letter,</span>
            <span id="number" class="invalid">a <b>number,</b></span>
            <span id="capital" class="invalid">a <b>capital (uppercase)</b> letter,</span>
            <span id="length" class="invalid">Minimum <b>8 characters,</b></span>
            <span id="special" class="invalid">Minimum 1 <b>special</b> character</span>
        </div>

        <div>
            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" autocomplete="off" id="cfm-psw" />
            <small class="text-danger"><span asp-validation-for="ConfirmPassword"></span></small>
            <span id="compare" class="invalid">Passwords must <b>match</b></span>
        </div>

        <div class="mb-3">
            <label asp-for="StreetName" class="form-label">Street Name</label>
            <input asp-for="StreetName" class="form-control" autocomplete="off"/>
            <small class="text-danger"><span asp-validation-for="StreetName"></span></small>
        </div>

        <div class="mb-3">
            <label asp-for="PostalCode" class="form-label">Postal Code</label>
            <input asp-for="PostalCode" class="form-control" autocomplete="off" id="postalcode"/>
            <small class="text-danger"><span asp-validation-for="PostalCode"></span></small>
        </div>
        <div id="message">
            <span id="postalCheck" class="invalid" style="display:none;">Postal code must contain exactly <b>5</b> digits</span>
        </div>

        <div class="mb-3">
            <label asp-for="City" class="form-label">City</label>
            <input asp-for="City" class="form-control" autocomplete="off" id="city"/>
            <small class="text-danger"><span asp-validation-for="City"></span></small>
        </div>
        <div id="message">
            <span id="cityCheck" class="invalid" style="display:none;">City must contain atleast <b>3</b> letters<br />City can <b>not</b> contain digits</span>
        </div>

        <div class="mt-5 mb-5">
            <div class="d-grid">
                <button type="submit" class="btn btn-theme">SIGN UP NOW</button>
            </div>
        </div>

    </form>
</div>

<script>
    validationScript()
</script>